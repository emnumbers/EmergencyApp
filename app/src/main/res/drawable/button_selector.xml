<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- false inner shape-->
    <item android:state_pressed="false"
        >
        <shape
            android:shape="oval">
            <solid
                android:color="@color/call_button_inner_color"/>
            <corners
                android:radius="20dp"/>
            <stroke
                android:width="3dp"
                android:color="@color/call_button_stroke"/>
        </shape>
    </item>
    <!--true inner shape-->
    <item android:state_pressed="true"
        >
        <shape
            android:shape="oval">
            <solid
                android:color="@color/call_button_stroke"/>
            <corners
                android:radius="20dp"/>
            <stroke
                android:width="3dp"
                android:color="@color/call_button_inner_color"/>
        </shape>
    </item>


</selector>